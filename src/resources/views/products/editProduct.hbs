<div class="heading_page">
    <h5>Dashboard <i class="bi bi-chevron-right"></i> Products <i class="bi bi-chevron-right"></i> Edit product</h5>
    <h2>Edit Products</h2>
</div>

<div class="layout add_page ">
    <form action="/products/{{product._id }}?_method=PUT" method="post">
        <div class="form-group mt-3">
            <label>Name product</label>
            <input type="text" class="form-control mt-2" name="name" value="{{product.name}}"  placeholder="Name product...">    
        </div>
        <div class="form-group mt-3">
            <label>Description</label>
            <textarea class="form-control" name="description" rows="5" placeholder="Description...">{{product.description}}</textarea>
        </div>
        <div class="form-group mt-3">
            <label>Price</label>
            <input type="number" class="form-control mt-2" name="price" value="{{product.price}}" placeholder="Price product...">    
        </div>
        <div class="form-group mt-3">
            <label>Image</label>
            <input type="text" class="form-control mt-2" name="image" value="{{product.img}}" placeholder="Link Image...">    
        </div>
        <div class="form-group mt-3">
            <label>Unit</label>
            <select class="form-select" aria-label="Default select example" name="unit">
                <option selected>Choice</option>
                <option value="Meter(m)" {{#if (eq product.unit 'Meter(m)')}}selected{{/if}}>Meter(m)</option>
                <option value="Kilogam(kg)" {{#if (eq product.unit 'Kilogam(kg)')}}selected{{/if}}>Kilogam(kg)</option>
                <option value="Piece(pcs)" {{#if (eq product.unit 'Piece(pcs)')}}selected{{/if}}>Piece(pcs)</option>
            </select>
        </div>
        <div class="form-group mt-3">
            <label>Stock</label>
            <input type="number" class="form-control mt-2" name="stock" value="{{product.stock}}" placeholder="Number stock...">    
        </div>
        <button type="submit" class="mt-3 btn btn-primary">Add new product</button>
    </form>
</div>

<div class="container mt-4">
    {{#each notifications}}
        <div class="alert alert-{{@key}} alert-dismissible fade show" role="alert">
            {{this}}
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    {{/each}}
</div>
<div class="heading_page">
    <h5>Dashboard <i class="bi bi-chevron-right"></i> Products <i class="bi bi-chevron-right"></i> Add product</h5>
    <h2>Add Products</h2>
    <h5>Add a new product to your company</h5>
</div>
<div class="layout add_page ">
    <form action="/products/{{product._id}}?_method=PUT" method="POST">
        <div class="col-6 level-left">
            <div class="level-top">
                <div class="heading">
                    <h2>Name and Description</h2>
                </div>
                <div class="layout">
                    <div class="form-group mt-3">
                        <label>Product Name</label>
                        <input type="text" class="form-control mt-2" name="name" value="{{product.name}}"  placeholder="Name product...">    
                    </div>
                    <div class="form-group mt-3 ">
                        <label class="mb-2">Product Description</label>
                        <textarea class="form-control mt-2 mb-3" name="description" rows="15" placeholder="Description...">{{product.description}}</textarea>
                    </div>
                    <div class="form-group mt-3">
                        <label>Product Discount</label>
                        <select class="form-select mt-2" aria-label="Default select example" name="sale" >
                            <option selected>{{product.sale}}</option>
                            <option value="0">0%</option>
                            <option value="0">5%</option>
                            <option value="0">10%</option>
                            <option value="0">15%</option>
                            <option value="0">20%</option>
                            <option value="0">25%</option>
                            <option value="0">30%</option>
                            <option value="0">35%</option>
                        </select>    
                    </div>
                    <div class="form-group mt-3">
                        <label>Price</label>
                        <div class="input-group mb-3">
                            <div class="input-group-prepend">
                                <span class="input-group-text" id="basic-addon1">VND</span>
                            </div>
                            <input type="number" class="form-control" placeholder="Price product..." name="price" min="0" value="{{product.price}}">
                        </div>
                    </div>
                    <button type="submit" class="btn btn-primary mb-3">
                        <i class="bi bi-floppy me-2"></i>
                        Save Product
                    </button>
                </div>
            </div>
             
        </div>
        <div class="col-6 level-right">
            <div class="level-top">
                <div class="heading">
                    <h2>Manage Stock</h2>
                </div>
                <div class="layout">
                    <div class="form-group mt-3">
                        <label>Stock Keeping Unit</label>
                        <select class="form-select mt-2" aria-label="Default select example" name="unit" value="{{product.unit}}">
                            <option selected>{{product.unit}}</option>
                            <option value="Meter(m)">Meter(m)</option>
                            <option value="Kilogam(kg)">Kilogam(kg)</option>
                            <option value="Piece(pcs)">Piece(pcs)</option>
                        </select>
                    </div>
                    <div class="form-group mt-3">
                        <label>Loại</label>
                        <select class="form-select mt-2" aria-label="Default select example" name="category">
                            <option selected value="{{categoryName._id}}">{{categoryName.name}}</option>
                            {{#each categoryPro}}
                                <option value="{{this._id}}">{{this.name}}</option>
                            {{/each}}
                        </select>
                    </div>
                    <div class="input-group mb-3 mt-3" style="width:100%;">
                            <div class="input-group mb-3 d-flex" style="gap:31px;">
                                <div class="col-50">
                                    <label>Quantity Of Stock</label>
                                    <div class="input-group">
                                        <input type="number" class="form-control mt-2" name="stock" value="{{product.stock}}" placeholder="Number minimum stock">
                                    </div>
                                </div>

                                <div class="col-50">
                                    <label class="form-label">Minimum Stock</label>
                                    <div class="input-group">
                                        <input type="number" class="form-control" name="minimum" value="{{product.minimum}}" placeholder="Number minimum stock">
                                    </div>
                                </div>
                            </div>
                    </div>
                </div>
            </div>

            <div class="level-top mt-4">
                <div class="heading">
                    <h2>Product Image</h2>
                </div>
                <div class="layout" >
                    <div class="form-group mt-3">
                        <label>Thumbnail Main</label>
                        <input type="text" class="form-control mt-2" name="thumbnail_main" value="{{product.thumbnail_main}}"  placeholder="Link thumbnail...">    
                    </div>
                    <div class="form-group mt-3">
                        <label>Thumbnail 1</label>
                        <input type="text" class="form-control mt-2" name="thumbnail_1" value="{{product.thumbnail_1}}"  placeholder="Link thumbnail...">    
                    </div>
                    <div class="form-group mt-3">
                        <label>Thumbnail 2</label>
                        <input type="text" class="form-control mt-2" name="thumbnail_2" value="{{product.thumbnail_2}}"  placeholder="Link thumbnail...">    
                    </div>
                    <div class="form-group mt-3 mb-4">
                        <label>Thumbnail 3</label>
                        <input type="text" class="form-control mt-2" name="thumbnail_3" value="{{product.thumbnail_3}}"  placeholder="Link thumbnail...">    
                    </div>
                </div>
            </div>
        </div>
    </form>
</div>

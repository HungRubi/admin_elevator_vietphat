<div class="heading_page">
    <h5>Dashboard <i class="bi bi-chevron-right"></i> Products <i class="bi bi-chevron-right"></i> Add product</h5>
    <h2>Add Products</h2>
</div>

<div class="layout add_page ">
    <form action="/products/store" method="post">
        <div class="form-group mt-3">
            <label>Name product</label>
            <input type="text" class="form-control mt-2" name="name"  placeholder="Name product...">    
        </div>
        <div class="form-group mt-3">
            <label>Description</label>
            <textarea class="form-control" name="description" rows="5" placeholder="Description..."></textarea>
        </div>
        <div class="form-group mt-3">
            <label>Price</label>
            <input type="number" class="form-control mt-2" name="price" placeholder="Price product...">    
        </div>
        <div class="form-group mt-3">
            <label>Image</label>
            <input type="text" class="form-control mt-2" name="img" placeholder="Link Image...">    
        </div>
        <div class="form-group mt-3">
            <label>Unit</label>
            <select class="form-select" aria-label="Default select example" name="unit">
                <option selected>Select unit of products</option>
                <option value="Meter(m)">Meter(m)</option>
                <option value="Kilogam(kg)">Kilogam(kg)</option>
                <option value="Piece(pcs)">Piece(pcs)</option>
            </select>
        </div>
        <div class="form-group mt-3">
            <label>Stock</label>
            <input type="number" class="form-control mt-2" name="stock" placeholder="Number stock...">    
        </div>
        <button type="submit" class="mt-3 btn btn-primary">Add new product</button>
    </form>
</div>

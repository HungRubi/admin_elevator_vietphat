<div class="heading_page">
    <h5>Dashboard <i class="bi bi-chevron-right"></i> Products <i class="bi bi-chevron-right"></i> Add product</h5>
    <h2>Add Products</h2>
    <h5>Add a new product to your company</h5>
</div>

<div class="layout add_page ">
    <form action="/products/store" method="post">
        <div class="col-6 level-left">
            <div class="level-top">
                <div class="heading">
                    <h2>Name and Description</h2>
                </div>
                <div class="layout">
                    <div class="form-group mt-3">
                        <label>Product Name</label>
                        <input type="text" class="form-control mt-2" name="name"  placeholder="Name product...">    
                    </div>
                    <div class="form-group mt-3">
                        <label>Product Description</label>
                        <textarea class="form-control mt-2 mb-3" name="description" rows="15" placeholder="Description..."></textarea>
                    </div>
                    <div class="form-group mt-3">
                        <label>Price</label>
                        <div class="input-group mb-3">
                            <div class="input-group-prepend">
                                <span class="input-group-text" id="basic-addon1">VND</span>
                            </div>
                            <input type="number" class="form-control" placeholder="Price product..." aria-label="Username" aria-describedby="basic-addon1" min="0" name="price">
                        </div>
                    </div>
                </div>
            </div>
            <button type="submit" class="btn btn-primary btn-save">
                <i class="bi bi-floppy me-2"></i>
                Save Product
            </button>
        </div>
        <div class="col-6 level-right">
            <div class="level-top">
                <div class="heading">
                    <h2>Manage Stock</h2>
                </div>
                <div class="layout">
                    <div class="form-group mt-3">
                        <label>Stock Keeping Unit</label>
                        <select class="form-select mt-2" aria-label="Default select example" name="unit">
                            <option selected>Select unit of products</option>
                            <option value="Meter(m)">Meter(m)</option>
                            <option value="Kilogam(kg)">Kilogam(kg)</option>
                            <option value="Piece(pcs)">Piece(pcs)</option>
                        </select>
                    </div>
                    <div class="form-group mt-3">
                        <label>Loại</label>
                        <select class="form-select mt-2" aria-label="Default select example" name="category">
                            <option selected>Chọn loại linh kiện</option>
                            <option value="cop">COP-LOP</option>
                            <option value="dien">Linh kiện điện</option>
                            <option value="inox">Linh kiện inox</option>
                            <option value="thep">Linh kiện thép</option>
                        </select>
                    </div>
                    <div class="input-group mb-3 mt-3" style="width:100%;">
                            <div class="input-group mb-3 d-flex" style="gap:31px;">
                                <div class="col-50">
                                    <label>Quantity Of Stock</label>
                                    <input type="number" class="mt-2 form-control" name="stock" placeholder="Number quantity" aria-label="Server">
                                </div>

                                <div class="col-50">
                                    <label for="product2" class="form-label">Minimum Stock</label>
                                    <div class="input-group">
                                        <input type="number" class="form-control" name="minimum" placeholder="Number minimum stock" aria-label="Server">
                                    </div>
                                </div>
                            </div>
                    </div>
                </div>
            </div>

            <div class="level-top mt-4">
                <div class="heading">
                    <h2>Product Image</h2>
                </div>
                <div class="layout" >
                    {{!-- <div class="wrapper_product d-flex flex-wrap gap-3" style="gap: 20px;">
                        <div class="frame_image is-center">
                            <div class="btn_add_image text-center">
                                <i class="bi bi-image"></i>
                                <h4>Click to upload</h4>
                                <input type="file" id="inputFile" accept=".jpg, .jpeg, .png" style="display: none;" />
                            </div>
                        </div>
                        <div class="frame_image image">
                            <img src="https://down-vn.img.susercontent.com/file/vn-11134201-23020-40ygyw4jbznve9" alt="" srcset="">

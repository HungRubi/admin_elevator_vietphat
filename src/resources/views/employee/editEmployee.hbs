<div class="heading_page">
    <h5>Dashboard <i class="bi bi-chevron-right"></i> Employee <i class="bi bi-chevron-right"></i> Edit Employee</h5>
    <h2>Edit Employee</h2>
    <h5>Edit a new employee to your company</h5>
</div>

<div class="layout add_page ">
    <form action="/employee/{{employee._id}}?_method=PUT" method="post">
        <div class="col-6 level-left">
            <div class="level-top">
                <div class="heading">
                    <h2>Information Employee</h2>
                </div>
                <div class="layout">
                    <div class="form-group mt-3">
                        <label>Full Name</label>
                        <input type="text" class="form-control mt-2" name="name" value="{{employee.name}}"  placeholder="Enter your name...">    
                    </div>
                    <div class="form-group mt-3">
                        <label>Email</label>
                        <input type="email" class="form-control mt-2" name="email" value="{{employee.email}}"  placeholder="Enter your email...">    
                    </div>
                    <div class="form-group mt-3">
                        <label>Phone</label>
                        <input type="text" class="form-control mt-2" name="phone" value="{{employee.phone}}"  placeholder="Enter your phone number...">    
                    </div>
                    <div class="form-group mt-3 mb-4">
                        <label>Address</label>
                        <input type="text" class="form-control mt-2" name="address" value="{{employee.address}}"  placeholder="Enter your address...">    
                    </div>
                    <div class="form-group mt-3 mb-4">
                        <label>Birth</label>
                        <input type="date" class="form-control mt-2" name="birth" value="{{employee.birthFormated}}">    
                    </div>
                </div>
            </div>
             
        </div>

        <div class="col-6 level-right">
            <div class="level-top mt-4">
                <div class="heading">
                    <h2>Account Employee</h2>
                </div>
                <div class="layout">
                    <div class="form-group mt-3">
                        <label>Avatar</label>
                        <input type="text" class="form-control mt-2" name="avatar" value="{{employee.avatar}}"  placeholder="Enter your account...">    
                    </div>
                    <div class="form-group mt-3">
                        <label>Account</label>
                        <input type="text" class="form-control mt-2" name="account" value="{{employee.account}}"  placeholder="Enter your account...">    
                    </div>
                    <div class="form-group mt-3">
                        <label>Password</label>
                        <input type="password" class="form-control mt-2" name="password" value="{{employee.password}}"  placeholder="Enter your password...">    
                    </div>
                    <div class="form-group mt-3 mb-4">
                        <label>Authorization</label>
                        <select class="form-select mt-2" aria-label="Default select example" name="authour">
                            <option selected value="{{employee.authour}}">{{#if employee.authour}}Employee{{else}}Admin{{/if}}</option>
                            <option value="false">Admin</option>
                            <option value="true">Employee</option>
                        </select>    
                    </div>
                </div>
            </div>
            <button type="submit" class="btn btn-primary btn-save">
                <i class="bi bi-floppy me-2"></i>
                Save Employee
            </button>
        </div>
    </form>
</div>

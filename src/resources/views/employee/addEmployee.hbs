<div class="heading_page">
    <h5>Dashboard <i class="bi bi-chevron-right"></i> Employee <i class="bi bi-chevron-right"></i> Add Employee</h5>
    <h2>Add Employee</h2>
    <h5>Add a new employee to your company</h5>
</div>

<div class="layout add_page ">
    <form action="/employee/store" method="post">
        <div class="col-6 level-left">
            <div class="level-top">
                <div class="heading">
                    <h2>Information Employee</h2>
                </div>
                <div class="layout">
                    <div class="form-group mt-3">
                        <label>Full Name</label>
                        <input type="text" class="form-control mt-2" name="name"  placeholder="Enter your name...">    
                    </div>
                    <div class="form-group mt-3">
                        <label>Email</label>
                        <input type="email" class="form-control mt-2" name="email"  placeholder="Enter your email...">    
                    </div>
                    <div class="form-group mt-3">
                        <label>Phone</label>
                        <input type="text" class="form-control mt-2" name="phone"  placeholder="Enter your phone number...">    
                    </div>
                    <div class="form-group mt-3 mb-4">
                        <label>Address</label>
                        <input type="text" class="form-control mt-2" name="address"  placeholder="Enter your address...">    
                    </div>
                    <div class="form-group mt-3 mb-4">
                        <label>Birth</label>
                        <input type="date" class="form-control mt-2" name="birth">    
                    </div>
                </div>
            </div>
            <button type="submit" class="btn btn-primary btn-save">
                <i class="bi bi-floppy me-2"></i>
                Save Employee
            </button> 
        </div>

        <div class="col-6 level-right">
            <div class="level-top">
                <div class="heading">
                    <h2>Avatar Employee</h2>
                </div>
                <div class="layout" >
                    <div class="wrapper_product d-flex flex-wrap gap-3" style="gap: 20px;">
                        <div class="frame_image is-center">
                            <div class="btn_add_image text-center">
                                <i class="bi bi-image"></i>
                                <h4>Click to upload</h4>
                                <input type="file" id="inputFile" accept=".jpg, .jpeg, .png" style="display: none;" />
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="level-top mt-4">
                <div class="heading">
                    <h2>Account Employee</h2>
                </div>
                <div class="layout">
                    <div class="form-group mt-3">
                        <label>Account</label>
                        <input type="text" class="form-control mt-2" name="account"  placeholder="Enter your account...">    
                    </div>
                    <div class="form-group mt-3">
                        <label>Password</label>
                        <input type="text" class="form-control mt-2" name="password"  placeholder="Enter your password...">    
                    </div>
                    <div class="form-group mt-3 mb-4">
                        <label>Authorization</label>
                        <select class="form-select mt-2" aria-label="Default select example" name="unit">
                            <option selected>Choice</option>
                            <option value="1">Admin</option>
                            <option value="0">Employee</option>
                        </select>    
                    </div>
                </div>
            </div>
             
        </div>
    </form>
</div>

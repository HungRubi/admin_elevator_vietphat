<div class="heading_page">
    <h5>Dashboard <i class="bi bi-chevron-right"></i> orders <i class="bi bi-chevron-right"></i> Add order</h5>
    <h2>Add order</h2>
    <h5>Add a new order to your company</h5>
</div>

<div class="layout add_page ">
    <form action="/orders/store" method="post">
        <div class="col-6 level-left">
            <div class="level-top">
                <div class="heading">
                    <h2>Custumer</h2>
                </div>
                <div class="layout">
                    <div class="form-group mt-3">
                        <label>Choised user</label>
                        <select class="form-select mt-2" aria-label="Default select example" id="sale" name="sale">
                            <option>--- Users ---</option>
                            <option value="0%">Nguyễn Huy Hùng - huyhung1804</option>
                        </select>
                    </div>
                    <div class="form-group mt-3">
                        <label>Phone</label>
                        <input type="text" class="form-control mt-2" name="phone"  placeholder="Enter your phone number...">    
                    </div>
                    <div class="form-group mt-3 mb-4">
                        <label>Address</label>
                        <input type="text" class="form-control mt-2" name="address"  placeholder="Enter your address...">    
                    </div>
                </div>
            </div>
            <div class="level-top mt-3">
                <div class="heading">
                    <h2>Status order</h2>
                </div>
                <div class="layout">
                    <div class="form-group mt-3">
                        <label>Choised pay method</label>
                        <select class="form-select mt-2" aria-label="Default select example" id="sale" name="sale">
                            <option>--- Method ---</option>
                            <option value="Thanh toán khi nhận hàng">Thanh toán khi nhận hàng</option>
                            <option value="Visa">Thanh toán qua thẻ Visa</option>
                            <option value="Atm nội địa">Chuyển khoản qua ATM</option>
                        </select>
                    </div>
                    <div class="form-group mt-3 mb-3">
                        <label>Status payment</label>
                        <select class="form-select mt-2" aria-label="Default select example" id="sale" name="sale">
                            <option>--- Status ---</option>
                            <option value="Thành công">Thành công</option>
                            <option value="Đang xử lý">Đang xử lý</option>
                            <option value="Thất bại">Thất bại</option>
                        </select>
                    </div>
                </div>
            </div>
            
        </div>

        <div class="col-6 level-right">
            <div class="level-top">
                <div class="heading">
                    <h2>Product</h2>
                </div>
                <div class="layout">
                    <div class="form-group mt-3">
                        <label>Choised product</label>
                        <select class="form-select mt-2" aria-label="Default select example" id="sale" name="sale">
                            <option>--- Products ---</option>
                            <option value="0%">COP cảm ứng</option>
                        </select>
                    </div>
                    <button class="btn btn-primary mt-3">
                        <i class="bi bi-plus"></i>
                        Thêm
                    </button>
                    <div class="form-group mt-3">
                        <table class="table">
                            <thead>
                                <th><input type="checkbox" name="" id=""></th>
                                <th></th>
                                <th>Name</th>
                                <th>Price</th>
                                <th>Quantity</th>
                            </thead>
                            <tbody>
                                <tr class="align-middle">
                                    <td style="width:50px;"><input type="checkbox" name="" id=""></td>
                                    <td class="col_image text-center col-2">
                                        <div class="wrapper_img_product is-center">
                                            <a href="#" class="is-center" style="width:100%;">
                                                <img src="/img/product/1.jpg" alt="product">
                                            </a>
                                        </div>
                                    </td>
                                    <td class="col-5">COP cảm ứng</td>
                                    <td class="col-3">100.000.000 VND</td>
                                    <td class="col-1 text-center">1</td>
                                </tr>
                                
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
            <button type="submit" class="btn btn-primary btn-save">
                <i class="bi bi-floppy me-2"></i>
                Save order
            </button>
        </div>
    </form>
</div>
<div class="footer">
    Thank you for creating with HuyHung | 2024 © 
</div>


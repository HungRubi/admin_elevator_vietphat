<div class="heading_page">
    <h5>
        Dashboard <i class="bi bi-chevron-right"></i> 
        Category <i class="bi bi-chevron-right"></i> 
        Banner  <i class="bi bi-chevron-right"></i>
        Edit banner
    </h5>
    <h2>Edit Banner</h2>
    <h5>Edit a banner to your company</h5>
</div>

<div class="layout add_page ">
    <form action="/category/banner/{{banner._id}}?_method=PUT" method="post">
        <div class="col-6 level-left">
            <div class="level-top">
                <div class="heading">
                    <h2>Banner Information</h2>
                </div>
                <div class="layout">
                    <div class="form-group mt-3">
                        <label>Name</label>
                        <input type="text" class="form-control mt-2" name="name"  placeholder="Enter name for banner..." value="{{banner.name}}">    
                    </div>
                    <div class="form-group mt-3 mb-3">
                        <label>Thumbnail</label>
                        <input type="text" class="form-control mt-2" name="thumbnail"  placeholder="Enter url for thumbnail..." value="{{banner.thumbnail}}">    
                    </div>
                    <div class="form-group mt-3 mb-3">
                        <label>Status</label>
                        <select class="form-select mt-2" aria-label="Default select example" name="status">
                            <option value="{{banner.status}}">{{banner.status}}</option>
                            <option value="public">Public</option>
                            <option value="hide">Hide</option>
                        </select> 
                    </div>
                    <button type="submit" class="btn btn-primary mb-3">
                        <i class="bi bi-floppy me-2"></i>
                        Save Discount
                    </button>
                </div>
            </div>
        </div>
    </form>
</div>

<div class="heading_page">
    <h5>
        Dashboard <i class="bi bi-chevron-right"></i> 
        Category <i class="bi bi-chevron-right"></i> 
        Discount  <i class="bi bi-chevron-right"></i>
        Add discount
    </h5>
    <h2>Add Discount</h2>
    <h5>Add a new discount to your company</h5>
</div>

<div class="layout add_page ">
    <form action="/category/discount/store" method="post">
        <div class="col-6 level-left">
            <div class="level-top">
                <div class="heading">
                    <h2>Discount Information</h2>
                </div>
                <div class="layout">
                    <div class="form-group mt-3">
                        <label>Titile</label>
                        <input type="text" class="form-control mt-2" name="title"  placeholder="Enter title for discount...">    
                    </div>
                    <div class="form-group mt-3">
                        <label>Description</label>
                        <textarea class="form-control mt-2 mb-3" name="description" rows="13" placeholder="Enter content for discount..."></textarea>
                    </div>
                </div>
            </div>
            <button type="submit" class="btn btn-primary btn-save">
                <i class="bi bi-floppy me-2"></i>
                Save Discount
            </button>
        </div>

        <div class="col-6 level-right">
            <div class="level-top">
                <div class="heading">
                    <h2>Discount Value</h2>
                </div>
                <div class="layout">
                    <div class="form-group mt-3 mb-5">
                        <label>Type Discount</label>
                        <select class="form-select mt-2" aria-label="Default select example" name="discount_type">
                            <option selected> ---- Choice --- </option>
                            <option value="giảm theo phần trăm">giảm theo phần trăm</option>
                            <option value="giảm theo số tiền cố định">giảm theo số tiền cố định</option>
                            <option value="giảm theo khách hàng vip">giảm theo khách hàng vip</option>
                            <option value="giảm giá theo thời gian">giảm giá theo thời gian</option>
                            <option value="giảm giá theo mã giảm giá">giảm giá theo mã giảm giá</option>
                        </select> 
                    </div>
                    <div class="form-group mt-3">
                        <label>Discount Value</label>
                        <input type="number" class="form-control mt-2" name="value_discount"  placeholder="Input a number at least zero..." min="0">    
                    </div>
                    <div class="form-group mt-3">
                        <label>Minimum Purchase Amount</label>
                        <div class="input-group mt-2 mb-3">
                            <div class="input-group-prepend">
                                <span class="input-group-text" id="basic-addon1">VND</span>
                            </div>
                            <input type="number" name="minimum_purchase" class="form-control" placeholder="Input a number at least zero..." min="0">
                        </div>    
                    </div>
                    <div class="form-group mt-3 mb-4">
                        <label>Use Limit</label>
                        <input type="number" class="form-control mt-2" name="use_limit"  placeholder="Enter your text...">    
                    </div>
                    <div class="form-group mt-3 mb-4">
                        <label>End Date</label>
                        <input type="date" class="form-control mt-2" name="end_date">    
                    </div>
                </div>
            </div>
            <div class="level-top mt-3">
                <div class="heading">
                    <h2>Apply Discount To Products</h2>
                </div>
                <div class="layout">
                    <div class="wrapper mb-3">
                        <div class="form-group mt-3">
                            <label>Type Products</label>
                            <select class="form-select mt-2 list_type_products">
                                <option>--- Type ---</option>
                                    <option>All Products</option>
                                    <option>Type of Products</option>
                                    <option>Specific Products</option>
                            </select>
                        </div>
                    </div>
                    <div class="wrapper discount_product">
                        <div class="form-group mt-3">
                            <label>List products</label>
                            <select class="form-select mt-2 list_products" name="name">
                                <option>--- Products ---</option>
                                {{#each products}}
                                    <option data-price="{{this.price}}" data-name="{{this.name}}" value="{{this._id}}" data-id="{{this._id}}" data-image="{{this.thumbnail_main}}">{{this.name}}</option>
                                {{/each}}
                            </select>
                        </div>
                        <button class="btn btn-primary mt-3 btn_add_products" type="button">
                            <i class="bi bi-plus"></i>
                            Add
                        </button>
                        <div class="form-group mt-3">
                            <table class="table table_products">
                                <thead class="align-middle">
                                    <th class="col-1"><input type="checkbox" name="" id=""></th>
                                    <th class="text-center col-3"><button class="btn btn-primary">Xóa</button></th>
                                    <th class="col-6">Name</th>
                                    <th class="col-2">Price</th>
                                </thead>
                                <tbody class="tbody_products">
                                </tbody>
                            </table>
                        </div>
                    </div>

                    <div class="wrapper discount_product mb-3">
                         <div class="form-group mt-3">
                            <label>List type products</label>
                            <select class="form-select mt-2 list_products">
                                <option>--- Type Products ---</option>
                                {{#each products}}
                                    <option data-price="{{this.price}}" data-name="{{this.name}}" value="{{this._id}}" data-id="{{this._id}}" data-image="{{this.thumbnail_main}}">{{this.name}}</option>
                                {{/each}}
                            </select>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </form>
</div>

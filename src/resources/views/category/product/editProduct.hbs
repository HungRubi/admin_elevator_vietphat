<div class="heading_page">
    <h5>
        Dashboard <i class="bi bi-chevron-right"></i> 
        Category <i class="bi bi-chevron-right"></i> 
        Product  <i class="bi bi-chevron-right"></i>
        Edit type product
    </h5>
    <h2>Edit type product</h2>
    <h5>Edit a type product to your company</h5>
</div>

<div class="layout add_page ">
    <form action="/category/product/{{categoryProduct._id}}?_method=PUT" method="post">
        <div class="col-6 level-left">
            <div class="level-top">
                <div class="heading">
                    <h2>Type Product Information</h2>
                </div>
                <div class="layout">
                    <div class="form-group mt-3">
                        <label>Titile</label>
                        <input type="text" class="form-control mt-2" name="name" value="{{categoryProduct.name}}"  placeholder="Enter title for discount...">    
                    </div>
                    <div class="form-group mt-3">
                        <label>Description</label>
                        <textarea class="form-control mt-2 mb-3" name="description" rows="13" placeholder="Enter content for discount...">{{categoryProduct.description}}</textarea>
                    </div>
                    <button type="submit" class="btn btn-primary mb-3">
                        <i class="bi bi-floppy me-2"></i>
                        Save Discount
                    </button>
                </div>
            </div>
        </div>
    </form>
</div>

<div class="heading_page">
    <h5>Dashboard <i class="bi bi-chevron-right"></i> Custumers <i class="bi bi-chevron-right"></i> Add Custumer</h5>
    <h2>Add custumer</h2>
    <h5>Add a new custumer to your company</h5>
</div>

<div class="layout add_page ">
    <form action="/custumers/store" method="post">
        <div class="col-6 level-left">
            <div class="level-top">
                <div class="heading">
                    <h2>Information custumer</h2>
                </div>
                <div class="layout">
                    <div class="form-group mt-3">
                        <label>Full Name</label>
                        <input type="text" class="form-control mt-2" name="name"  placeholder="Enter your name...">    
                    </div>
                    <div class="form-group mt-3">
                        <label>Email</label>
                        <input type="email" class="form-control mt-2" name="email"  placeholder="Enter your email...">    
                    </div>
                    <div class="form-group mt-3">
                        <label>Phone</label>
                        <input type="text" class="form-control mt-2" name="phone"  placeholder="Enter your phone number...">    
                    </div>
                    <div class="form-group mt-3 mb-4">
                        <label>Address</label>
                        <input type="text" class="form-control mt-2" name="address"  placeholder="Enter your address...">    
                    </div>
                    <div class="form-group mt-3 mb-4">
                        <label>Birth</label>
                        <input type="date" class="form-control mt-2" name="birth">    
                    </div>
                </div>
            </div>
             
        </div>

        <div class="col-6 level-right">
            <div class="level-top mt-4">
                <div class="heading">
                    <h2>Account custumer</h2>
                </div>
                <div class="layout">
                    <div class="form-group mt-3">
                        <label>Avatar</label>
                        <input type="text" class="form-control mt-2" name="avatar"  placeholder="Enter your account...">    
                    </div>
                    <div class="form-group mt-3">
                        <label>Account</label>
                        <input type="text" class="form-control mt-2" name="account"  placeholder="Enter your account...">    
                    </div>
                    <div class="form-group mt-3 mb-4">
                        <label>Password</label>
                        <input type="password" class="form-control mt-2" name="password"  placeholder="Enter your password...">    
                    </div>
                </div>
            </div>
            <button type="submit" class="btn btn-primary btn-save">
                <i class="bi bi-floppy me-2"></i>
                Save custumer
            </button>
        </div>
    </form>
</div>

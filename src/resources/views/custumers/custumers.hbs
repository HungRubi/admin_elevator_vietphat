<script>
  const deleteSong = document.getElementById('delete-custumers-model')
  const btnDelete = document.getElementById('btn-delete');
  const deleteForm = document.forms['delete-custumers-form'];

  var custumers;
  if (deleteSong) {
    deleteSong.addEventListener('show.bs.modal', event => {
      const button = event.relatedTarget
      custumers = button.getAttribute('data-id')
    })
  }
  if(btnDelete){
    btnDelete.addEventListener('click', () => {
      deleteForm.action = '/custumerss/' + custumers + '?_method=DELETE';
      deleteForm.submit();
    })
  }
</script>